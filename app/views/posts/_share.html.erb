<%= form_for @new_post = Post.new do |f| %>
    <%= f.hidden_field :content, value: resource.content %>
    <% if resource.image.attached? %>
        <%= hidden_field_tag :shared, resource.id %>
    <% end %>
    <%= f.hidden_field :shared_from_id, value: resource.origin_id %>
    <%= f.label "Share", for: "share-#{resource.id}", class: "i-container row flex-center center" do %>
        <i class="far fa-share-square"></i>
        <p>Share</p>
    <% end %>
    <%= f.submit "Share", id: "share-#{resource.id}", class: "d-none" %>
<% end %>
