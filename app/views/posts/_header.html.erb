<div class="row space-between flex-start">
    <div class="row">
        <%= image_tag avatar_for(post.user), alt: "user avatar", class: "post-avatar" %>
        <div class="post-info col flex-start space-evenly">
            <%= link_to display_name(post.user), post.user, class: "post-author" %>
            <div>
                <%= link_to display_time(post.created_at), post, class: "post-date" %>
                <% if post.shared_from_id %>
                    <span> - Shared</span>
                <% else %>
                    <span> - Original</span>
                <% end %>
            </div>
        </div>
    </div>
    <% if post.user == current_user %>
        <%= render "posts/options", post: post %>
    <% end %>
</div>
