<%= form_for @user, html: { class: "tile profile-info col flex-center" } do |f| %>
    <input id="edit-switch" type="checkbox" class="d-none">
        <%= image_tag gravatar_url(@user.email), alt: "user avatar", class: "profile-avatar"%>
    <div class="profile-name">
        <p><%= @user.name %></p>
        <%= f.text_field :name, placeholder: "Your name", class: "profile-input d-none" %>
    </div>
    <div class="profile-email">
        <p><%= @user.email %></p>
        <%= f.text_field :email, placeholder: "Your e-mail", class: "profile-input d-none" %>
    </div>
    <div class="profile-bio">
        <p><%= @user.bio %></p>
        <%= f.text_area :bio, placeholder: "Write about yourself...", class: "profile-area d-none" %>
    </div>
    <label for="content-switch" class="friends-label profile-btn btn-style">Your Friends</label>
    <label for="content-switch" class="posts-label profile-btn btn-style d-none">Your Posts</label>
    <label for="edit-switch" class="profile-btn btn-style">Edit Profile</label>
    <div class="col">
        <%= f.submit "Save Changes", class: "profile-btn btn-style d-none" %>
        <%= link_to "Delete Account", user_registration_path, method: "delete", class: "profile-btn btn-style d-none", data: { confirm: "Are you sure? Your profile and posts will be lost forever!" }%>
    </div>
<% end %>
