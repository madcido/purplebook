<div class="tile profile-info col flex-center">
    <%= image_tag gravatar_url(@user.email), alt: "user avatar", class: "profile-avatar"%>
    <div class="profile-name">
        <p><%= @user.name %></p>
    </div>
    <div class="profile-email">
        <p><%= @user.email %></p>
    </div>
    <div class="profile-bio">
        <p><%= @user.bio %></p>
    </div>
    <label for="content-switch" class="friends-label profile-btn btn-style"><%= first_name(@user.name) %>'s Friends</label>
    <label for="content-switch" class="posts-label profile-btn btn-style d-none"><%= first_name(@user.name) %>'s Posts</label>
    <p class="fr-msg"><%= friendship_action(find_friendship(@user)) %></p>
    <div class="row profile-btn gambiarra2 -hrz">
        <%= render "layouts/action", action: "friend", resource: @user, collection: @user.friends.ids %>
    </div>
</div>
