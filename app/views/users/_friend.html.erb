<% if friendship = find_friendship(resource) %>
    <% if friendship.sender == current_user %>
        <%= render "users/unfriend", resource: resource, friendship: friendship, mode: "Cancel Request" %>
    <% else %>
        <%= render "friendships/update", resource: resource, friendship: friendship %>
        <%= render "users/unfriend", resource: resource, friendship: friendship, mode: "Decline" %>
    <% end %>
<% else %>
    <%= render "friendships/new", resource: resource %>
<% end %>
