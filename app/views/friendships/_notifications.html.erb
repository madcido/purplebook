<%= label_tag "notification-switch", class: "nav-item", id: "notifications-panel" do %>
    <% if (count = current_user.received_requests.pending.count) > 0 %>
        <i class="fas fa-bell"></i>
        <p class="notification-counter"><%= count %></p>
    <% else %>
        <i class="far fa-bell"></i>
    <% end %>
    <div class="notifications d-none">
        <% if count > 0 %>
            <%= render current_user.pending_friends %>
        <% else %>
            <p class="no-">No new notifications</p>
        <% end %>
    </div>
<% end %>
